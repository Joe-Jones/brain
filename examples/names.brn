// Name guesser program
// Asks for the first letter of your name, then tries to guess your name

stdout.writeln(b"MAGIC NAME GUESSER");

let prompt: [u8; _] = b"Enter the first letter of your name:";

let mut c: [u8; 1];
stdout.writeln(prompt);
stdin.read(c);

while c {
    stdout.writeln(b"My guess is that your name is:");
    if c == b"a" {
        stdout.writeln(b"Alexander");
    }
    else if c == b"e" {
        stdout.writeln(b"Emily");
    }
    else if c == b"m" {
        stdout.writeln(b"Matthew");
    }
    else {
        stdout.writeln(b"I don't know.");
    }

    stdout.writeln(prompt);
    stdin.read(c);
}
